@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Auth.css">
</head>
<body class="bgImg">
    <div class="container" style="margin-top: 100px;">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="login-card text-center">
                    <div class="card-header">
                        <h2 class="fw-bold text-white">Check Your Email</h2>
                    </div>
                    <div class="card-body p-5">
                        <div class="mb-4">
                            <i class="fa-solid fa-envelope-open-text fa-4x" style="color: #4bc1d2;"></i>
                        </div>
                        <h4 class="mb-3 text-dark">Reset Link Sent!</h4>
                        <p class="text-muted">
                            Please check your email to reset your password.
                        </p>
                        <a asp-page="./Login" class="btn-submit d-inline-block mt-3 text-decoration-none">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://kit.fontawesome.com/yourcode.js"></script> </body>
</html>