@{
    ViewData["Title"] = "Email Confirmed";
}

<div class="container py-5 text-center">
    <div class="card shadow-sm p-5 mx-auto" style="max-width: 500px;">
        <div class="mb-4">
            <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
        </div>
        <h2 class="h3 mb-3">Email Successfully Confirmed!</h2>
        <p class="text-muted">
            Thank you for confirming your email address. Your account is now verified.
        </p>
        <div class="mt-4">
            <a asp-controller="Account" asp-action="Profile" class="btn btn-primary w-100">
                Back to Profile
            </a>
        </div>
    </div>
</div>