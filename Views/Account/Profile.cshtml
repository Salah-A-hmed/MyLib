@using Biblio.Models.ViewModels
@model ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container py-5">
    <div class="row">
        <!-- Profile Header Card -->
        <div class="col-12 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Account Information</h5>
                </div>
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-md-2 text-center mb-3 mb-md-0">
                            <!-- Profile Avatar -->
                            <div class="profile-avatar mx-auto">
                                @if (!string.IsNullOrEmpty(Model.ProfilePicture))
                                {
                                    <img src="@Model.ProfilePicture" alt="Profile Picture" class="rounded-circle img-fluid" style="width: 120px; height: 120px; object-fit: cover; border: 4px solid #f8f9fa;">
                                }
                                else
                                {
                                    <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center mx-auto" style="width: 120px; height: 120px; font-size: 48px; border: 4px solid #f8f9fa;">
                                        @Model.FullName?.Substring(0, 1).ToUpper()
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="col-md-7">
                            <h2 class="mb-2">@Model.FullName</h2>
                            <p class="text-muted mb-2">
                                <i class="bi bi-envelope-at me-1"></i>
                                <strong class="me-2">Email:</strong>
                                @Model.Email
                                @if (Model.EmailConfirmed)
                                {
                                    <span class="badge bg-success m-2">Verified</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark m-2 ">Unverified</span>
                                }

                            </p>
                            <p class="text-muted mb-2">
                                <i class="bi bi-person-gear me-1"></i>
                                <strong class="me-2">Username:</strong>
                                @Model.UserName
                                <span class="badge rounded-pill fs-6 mb-2 bg-light text-dark m-1 shadow">@string.Join(", ", ViewBag.UserRole)</span>
                            </p>
                            @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                            {
                                <p class="text-muted mb-2">
                                    <i class="bi bi-telephone me-2"></i>@Model.PhoneNumber
                                </p>
                            }
                            else
                            {
							<p class="text-mutedmb-2">
                                    <i class="bi bi-telephone me-2"></i><em>No phone number</em>
                                </p>
							}
                            <div class="mt-4">
                                <h5>Payment Plan Details</h5>
                                <div class="Payment-details-box">
                                    <p id="PaymentDetails">Payment Plan: @Model.PaymentPlan</p>
                                    <p id="PaymentDetails">Plan Price: $@Model.PaymentPrice</p>
                                    <p id="PaymentDetails">Next payment at: @Model.NextPayment</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3 text-md-end">
                            <a asp-area="Identity" asp-page="/Account/Manage/Index" data-page="account-settings" class="btn btn-primary mb-2 w-100">
                                <i class="bi bi-pencil-square me-2"></i>Edit Profile
                            </a>
                            <a asp-area="Identity" asp-page="/Account/Manage/ChangePassword" data-page="account-settings" class="btn btn-outline-secondary w-100">
                                <i class="bi bi-shield-lock me-2"></i>Change Password
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="bi bi-book text-primary" style="font-size: 3rem;"></i>
                    </div>
                    <h3 class="mb-1">@ViewBag.TotalBooks</h3>
                    <p class="text-muted mb-0">Books in Library</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="bi bi-collection text-success" style="font-size: 3rem;"></i>
                    </div>
                    <h3 class="mb-1">@ViewBag.TotalCollections</h3>
                    <p class="text-muted mb-0">Collections</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="bi bi-arrow-left-right text-warning" style="font-size: 3rem;"></i>
                    </div>
                    <h3 class="mb-1">@ViewBag.ActiveBorrowings</h3>
                    <p class="text-muted mb-0">Active Borrowings</p>
                </div>
            </div>
        </div>

    </div>
</div>

@section Styles {
    <style>
        .card {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }
        
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }

        .profile-avatar {
            position: relative;
        }

        .list-group-item:hover {
            background-color: #f8f9fa;
        }

        .alert {
            font-size: 0.9rem;
        }

        .Payment-details-box {
            background-color: #fdfdfd;
            border: 1px dashed #e0e0e0; /* بوردر منقط */
            padding: 1rem;
            border-radius: 8px;
            max-height: 150px; /* ارتفاع أصغر */
            overflow-y: auto;
			text-align: left;
        }

        #PaymentDetails {
            font-size: 1.2rem;
            color: black;
			margin: 1px;
            margin-left : 20px;
		}

        h5 {
            font-size: 0.85rem !important;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            color: var(--sidebar-text); /* لون الثيم */
            border-bottom: 2px solid var(--active-bg); /* خط بلون الثيم */
            padding-bottom: 8px;
            margin-bottom: 12px;
            display: inline-block; /* عشان الخط يقف مع آخر كلمة */
        }
    </style>
}

@section Scripts {
    <script>
        // Auto-dismiss notifications after 5 seconds
        setTimeout(function() {
            $('.alert').alert('close');
        }, 5000);
    </script>
}