@model Biblio.Models.ViewModels.UserManageViewModel

@{
    ViewData["Title"] = "Edit User";
}

<h2>Edit User: @Model.UserName</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Admin" asp-action="EditUser" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label class="form-label">Username</label>
                <input asp-for="UserName" class="form-control" readonly />
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Email</label>
                <input asp-for="Email" class="form-control" readonly />
            </div>

            <div class="form-group mb-3">
                <label asp-for="PlanType" class="form-label"></label>
                <select asp-for="PlanType" asp-items="Html.GetEnumSelectList<PlanType>()" class="form-select"></select>
                <span asp-validation-for="PlanType" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Role" class="form-label"></label>
                <select asp-for="Role" asp-items="@Model.AvailableRoles" class="form-select"></select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="ManageUsers" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}