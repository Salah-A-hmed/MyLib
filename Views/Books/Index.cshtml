@model IEnumerable<Biblio.Models.Book>

@{
    ViewData["Title"] = "Library";
    var currentSort = ViewData["CurrentSort"]?.ToString() ?? "Title";
    var currentStatus = ViewData["StatusFilter"]?.ToString() ?? "All";
    var currentCollectionId = (int?)(ViewData["CurrentCollection"] ?? 0);
    var currentSearch = ViewData["CurrentSearch"]?.ToString();
    Func<string, string> ToggleSort = field =>
    {
        if (currentSort == field) return field + "_desc";
        if (currentSort == field + "_desc") return field;
        return currentSort.EndsWith("_desc") ? field + "_desc" : field;
    };
    var fieldName = currentSort.Replace("_desc", "");
    var toggled = currentSort.EndsWith("_desc") ? fieldName : fieldName + "_desc";
}

@* (1) دي الحاوية الرئيسية للمكتبة (هنخفيها بالـ JS) *@
<div id="library-main-content">

    <div class="top-header" style="padding-left: 0; padding-right: 0; border-bottom: none; background: none;">
        <form asp-controller="Books" asp-action="Index" method="get" class="search-container">
            <input type="hidden" name="sortOrder" value="@currentSort" />
            <input type="hidden" name="statusFilter" value="@currentStatus" />
            <input type="hidden" name="collectionId" value="@currentCollectionId" />

            <i class="fas fa-search search-icon"></i>
            <input type="text"
                   class="search-input"
                   placeholder="Search Title, Author, ISBN..."
                   name="searchString"
                   value="@currentSearch">
        </form>
    </div>

    <div class="controls-section">
        <div class="view-controls">
            <div class="control-dropdown">
                <div class="control-button" id="viewButton">
                    <i class="fas fa-align-left"></i>
                    <span id="viewText">Summary</span>
                </div>
                <div class="select-dropdown-content">
                    <div class="select-option" data-value="cover" data-icon="fas fa-th">Cover</div>
                    <div class="select-option" data-value="list" data-icon="fas fa-list">List</div>
                    <div class="select-option" data-value="summary" data-icon="fas fa-align-left">Summary</div>
                </div>
            </div>
            <div class="control-dropdown dropdown">
                <button class="control-button" type="button" id="sortDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-sort-alpha-down"></i>
                    <span>@fieldName</span>
                    <i class="fas fa-chevron-down"></i>
                </button>
                <ul class="dropdown-menu" aria-labelledby="sortDropdown" style="padding:0px">
                    <li><a class="dropdown-item" href='@Url.Action("Index", new { sortOrder = ToggleSort("Title"), statusFilter = currentStatus, searchString = currentSearch, collectionId = currentCollectionId })'>Title</a></li>
                    <li><a class="dropdown-item" href='@Url.Action("Index", new { sortOrder = ToggleSort("Author"), statusFilter = currentStatus, searchString = currentSearch, collectionId = currentCollectionId })'>Author</a></li>
                    <li><a class="dropdown-item" href='@Url.Action("Index", new { sortOrder = ToggleSort("Publisher"), statusFilter = currentStatus, searchString = currentSearch, collectionId = currentCollectionId })'>Publisher</a></li>
                    <li><a class="dropdown-item" href='@Url.Action("Index", new { sortOrder = ToggleSort("Category"), statusFilter = currentStatus, searchString = currentSearch, collectionId = currentCollectionId })'>Category</a></li>
                    <li><a class="dropdown-item last-child" href='@Url.Action("Index", new { sortOrder = ToggleSort("Rating"), statusFilter = currentStatus, searchString = currentSearch, collectionId = currentCollectionId })'>Rating</a></li>
                </ul>
            </div>

            <a class="btn btn-outline-secondary" href='@Url.Action("Index", new { sortOrder = toggled, statusFilter = currentStatus, searchString = currentSearch, collectionId = currentCollectionId })' title="Toggle direction">
                <i class="@(currentSort.EndsWith("_desc") ? "bi bi-arrow-down" : "bi bi-arrow-up")"></i>
            </a>
        </div>
        <button class="filter-button" id="filterButton">
            <i class="fas fa-filter"></i>
            Filters
        </button>
    </div>

    <div class="filter-overlay" id="filterOverlay"></div>
    <div class="filter-sidebar" id="filterSidebar">
        <div class="filter-header">
            <h3 class="filter-title">Filters</h3>
            <div>
                <a asp-action="Index" class="filter-clear">Clear all</a>
                <button class="filter-close" id="filterClose">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="filter-content">
            <form asp-action="Index" method="get" id="filterForm">
            <input type="hidden" name="sortOrder" value="@currentSort" />
            <input type="hidden" name="searchString" value="@currentSearch" />

            <div class="filter-section">
                <div class="filter-section-title">Status</div>
                <div class="status-options">
                    <select name="statusFilter" class="form-select" onchange="this.form.submit()">
                        <option value="All" selected="@(currentStatus == "All")">All Statuses</option>
                        <option value="No Status" selected="@(currentStatus == "No Status")">No Status</option>
                        <option value="Not Begun" selected="@(currentStatus == "Not Begun")">Not Begun</option>
                        <option value="In Progress" selected="@(currentStatus == "In Progress")">In Progress</option>
                        <option value="Completed" selected="@(currentStatus == "Completed")">Completed</option>
                        <option value="Abandoned" selected="@(currentStatus == "Abandoned")">Abandoned</option>
                    </select>
                </div>
                <div class="filter-section-title">Collection</div>
                 <div class="collection-options">
                        <select name="collectionId"
                                class="form-select"
                                asp-items='(List<SelectListItem>)ViewData["CollectionList"]'
                                onchange="this.form.submit()">
                        </select>
                 </div>
             </div>
            </form>

        </div>
    </div>

    <div class="book flex flex-col gap-8">
        @if (!Model.Any())
        {
            <div class="empty-state" style="padding-top: 20px;">
                <h2>No books found.</h2>
                <p>Try adjusting your search or filters, or add a new item.</p>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                // (أ) تجهيز المتغيرات
                var description = item.Description ?? "";
                var publisher = item.Publisher ?? "";
                var author = item.Author ?? "";
                var category = item.Category ?? "";
                var review = item.Review ?? "";
                var rating = item.Rating?.ToString() ?? "";
                var year = item.PublishYear?.ToString() ?? "";
                var pages = item.Pages?.ToString() ?? "";
                var totalCopies = item.TotalCopies.ToString() ?? "";
                var availableCopies = item.AvailableCopies.ToString(); // (إضافة جديدة)
                var price = item.Price?.ToString() ?? ""; // (إضافة جديدة)
                var isbn = item.ISBN ?? "";
                var status = item.Status ?? "No Status";
                var cover = item.CoverImageUrl ?? "";
                var missingImg = Url.Content("~/img/missing.png");

                // (ب) كارت الـ Summary (معدل)
                <div class="book-card-summary js-book-details-trigger"
                     style="cursor: pointer;"
                     data-book-id="@item.ID"
                     data-title="@item.Title"
                     data-author="@author"
                     data-description="@description"
                     data-cover="@cover"
                     data-isbn="@isbn"
                     data-publisher="@publisher"
                     data-year="@year"
                     data-pages="@pages"
                     data-total-copies="@totalCopies"
                     data-available-copies="@availableCopies"
                     data-price="@price"
                     data-status="@status"
                     data-category="@category"
                     data-rating="@rating"
                     data-review="@review"
                     data-edit-url="@Url.Action("Edit", "Books", new { id = item.ID })"
                     data-delete-url="@Url.Action("Delete", "Books", new { id = item.ID })"
                     data-missing-img-url="@missingImg">

                    <div class="bg-white border border-gray-200 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300 p-5 mb-8">
                        <div class="flex flex-col md:flex-row gap-6">
                            <div class="flex-shrink-0">
                                @if (item.CoverImageUrl == null)
                                {
                                    <img src="@missingImg" alt="@item.Title" class="w-32 h-48 object-cover rounded shadow-md">
                                }
                                else
                                {
                                    <img src="@item.CoverImageUrl" alt="@item.Title" class="w-32 h-48 object-cover rounded shadow-md"
                                         onerror="this.onerror=null; this.src='@missingImg';" />
                                }
                            </div>
                            <div class="flex-grow">
                                <h3 class="text-xl md:text-2xl font-bold text-gray-900 mb-1">@item.Title</h3>
                                <p class="text-base md:text-lg text-gray-600 text-left">@item.Author</p>
                                <div class="flex flex-wrap gap-3 text-sm text-gray-600 mb-3 text-left">
                                    <span class="font-semibold text-black">@item.PublishYear</span>
                                    <span>@item.Pages pages</span>
                                    <span>(@item.Publisher)</span>
                                </div>
                                <div class="text-sm text-gray-700 mb-3 text-left">
									<span class="font-semibold text-black">ISBN:</span> @item.ISBN
                                </div>
                                <div class="text-sm text-gray-700 mb-4 text-left">
                                    <span class="font-semibold text-black">Category: </span> @item.Category
                                </div>
                                <div class="border-t border-gray-200 pt-4 text-left">
                                    <p class="text-xs text-gray-700 leading-relaxed text-left">@item.Description</p>
                                </div>
                                @* (ج) تم حذف الأزرار القديمة من هنا *@
                            </div>
                        </div>
                    </div>
                </div>

                // (د) كارت الـ List (معدل)
                <div class="book-card-list js-book-details-trigger"
                     style="cursor: pointer;"
                     data-book-id="@item.ID"
                     data-title="@item.Title"
                     data-author="@author"
                     data-description="@description"
                     data-cover="@cover"
                     data-isbn="@isbn"
                     data-publisher="@publisher"
                     data-year="@year"
                     data-pages="@pages"
                     data-total-copies="@totalCopies"
                     data-available-copies="@availableCopies"
                     data-price="@price"
                     data-status="@status"
                     data-rating="@rating"
                     data-review="@review"
                     data-edit-url="@Url.Action("Edit", "Books", new { id = item.ID })"
                     data-delete-url="@Url.Action("Delete", "Books", new { id = item.ID })"
                     data-missing-img-url="@missingImg">

                    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center bg-white border border-gray-200 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300 p-4">
                        <div>
                            <h3 class="text-lg font-semibold text-gray-900">@item.Title</h3>
                            <p class="text-sm text-gray-600 text-left">@item.Author</p>
                        </div>
                        <div class="text-sm text-gray-700 mt-2 sm:mt-0 text-left ">
                            <span class="block"><span class="font-semibold text-black">ISBN:</span> @item.ISBN</span>
                        </div>
                    </div>
                </div>

                // (هـ) كارت الـ Cover (معدل)
                <div class="book-card-cover js-book-details-trigger"
                     style="cursor: pointer;"
                     data-book-id="@item.ID"
                     data-title="@item.Title"
                     data-author="@author"
                     data-description="@description"
                     data-cover="@cover"
                     data-isbn="@isbn"
                     data-publisher="@publisher"
                     data-year="@year"
                     data-pages="@pages"
                     data-total-copies="@totalCopies"
                     data-available-copies="@availableCopies"
                     data-price="@price"
                     data-status="@status"
                     data-rating="@rating"
                     data-review="@review"
                     data-edit-url="@Url.Action("Edit", "Books", new { id = item.ID })"
                     data-delete-url="@Url.Action("Delete", "Books", new { id = item.ID })"
                     data-missing-img-url="@missingImg">

                    <div class="flex flex-col items-center text-center bg-white border border-gray-200 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300 p-4">
                        @if (item.CoverImageUrl == null)
                        {
                            <img src="@missingImg" alt="@item.Title" class="w-36 h-52 object-cover rounded shadow-md mb-3">
                        }
                        else
                        {
                            <img src="@item.CoverImageUrl" alt="@item.Title" class="w-36 h-52 object-cover rounded shadow-md mb-3"
                                 onerror="this.onerror=null; this.src='@missingImg';" />
                        }
                        <h3 class="text-sm font-semibold text-gray-900 mb-1 w-full truncate">@item.Title</h3>
                        <p class="text-xs text-gray-600">@item.Author</p>
                    </div>
                </div>
            }
        }
    </div>
</div> @* (2) دي الحاوية المخفية اللي هتستقبل التفاصيل *@
<div id="book-details-view" style="display: none;">
    @* (3) هنستدعي الـ Partial الجديد هنا *@
    <partial name="_BookDetailsContent" />
</div>

@* (4) هنستدعي مودال الحذف هنا (لأن صفحة التفاصيل هي اللي بتستخدمه) *@
<partial name="_DeleteConfirmationModalPartial" />

@section Scripts {
    @* الـ JavaScript بتاع الـ Index هينزل هنا كالعادة *@
}