@* ملف: Views/Books/_BookDetailsContent.cshtml (النسخة المعدلة) *@

<div id="book-details-view">
    <div class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom">
        <button type="button" id="backToLibraryBtn" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to Library
        </button>
        <div class="modal-actions">
            <a href="#" id="modalEditButton" class="btn btn-warning">
                <i class="fas fa-edit"></i>
            </a>
            <button type="button" id="modalDeleteButton" class="btn btn-danger"
                    data-bs-toggle="modal"
                    data-bs-target="#DeleteConfirmationModal"
                    data-delete-url=""
                    data-entity-name="">
                <i class="fas fa-trash"></i>
            </button>
        </div>
    </div>

    <div class="row">

        @* (أ) العمود الشمال (الصورة + Details فقط) *@
        <div class="col-md-4 col-lg-3 text-center text-md-start">
            <img id="modalBookImage" src="" class="img-fluid rounded shadow-sm mb-3" alt="Book Cover" style="max-width: 250px; object-fit: contain;">

            <div class="mt-4 details-sidebar">
                <h5>Details</h5>
                <ul class="list-unstyled">
                    <li><strong>ISBN:</strong> <span id="modalBookISBN"></span></li>
                    <li><strong>Publisher:</strong> <span id="modalBookPublisher"></span></li>
                    <li><strong>Category:</strong> <span id="modalBookCategory"></span></li>
                    <li><strong>Year:</strong> <span id="modalBookYear"></span></li>
                    <li><strong>Pages:</strong> <span id="modalBookPages"></span></li>
                    <li><strong>Stock Count:</strong> <span id="modalBookStock"></span></li>
                    <li><strong>Price:</strong> <span id="modalBookPrice"></span></li>
                </ul>
            </div>
        </div>

        @* (ب) العمود اليمين (باقي كل حاجة) *@
        <div class="col-md-8 col-lg-9">
            <span id="modalBookStatusBadge" class="badge rounded-pill fs-6 mb-2"></span>
            <h2 id="modalBookTitle"></h2>
            <p id="modalBookAuthor"></p>

            @* (ج) حاوية الوصف *@
            <div class="mt-3">
                <h5 id="descriptionHeader">Description</h5>
                <div class="details-description-box">
                    <p id="modalBookDescription"></p>
                </div>
            </div>

            @* (د) حاوية "My Info" رجعت هنا *@
            <div class="mt-4">
                <h5>My Rating</h5>
                <ul class="list-unstyled">
                    <li>
                        @* الحاوية دي هتستقبل النجوم بالـ JS *@
                        <span id="modalBookRatingStars" class="rating-stars"></span>
                        <span id="modalBookRating"></span>
                    </li>
                </ul>
            </div>

            @* (هـ) حاوية الـ Review الجديدة *@
            <div class="mt-4">
                <h5>My Review</h5>
                <div class="details-review-box">
                    <p id="modalBookReview"></p>
                </div>
            </div>

        </div>
    </div>
</div>