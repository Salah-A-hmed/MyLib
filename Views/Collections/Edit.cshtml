@model Biblio.Models.Collection

@{
    ViewData["Title"] = "Edit";
}
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ID" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" placeholder="Collection Name" class="form-control w-75 mt-4 mb-2 " />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" placeholder="Collection Description" class="form-control w-75 mt-4 mb-2" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <a asp-action="Details" asp-route-id="@Model.ID" class="btn btn-outline-secondary" style="padding: 10px 30px;margin-top: 20px;">
            <i class="fas fa-arrow-left"></i> back
        </a>
        <input type="submit" value="Save" class="btn btn-submit" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
