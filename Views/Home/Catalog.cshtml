@{
    ViewData["Title"] = "Book Catalog";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<!-- Hero Section -->
<section class="!bg-gradient-to-br !from-[#2C3E50] !to-[#3d5a73] !py-16 !px-[6%]">
    <div class="!max-w-6xl !mx-auto !text-center">
        <h1 class="!text-4xl md:!text-6xl !font-bold !text-white !mb-6">
            <i class="fas fa-book !text-[#4bc1d2] !mr-4"></i>
            Book Catalog
        </h1>
        <p class="!text-xl !text-white/90 !max-w-3xl !mx-auto !mb-8">
            Explore our extensive collection of books. Search, filter, and discover your next great read.
        </p>

        <!-- Search Bar -->
        <div class="!max-w-2xl !mx-auto !relative">
            <input type="text" id="searchInput" placeholder="Search by title, author, or ISBN..."
                   class="!w-full !px-6 !py-4 !pl-14 !pr-28 !rounded-full !text-lg !border-2 !border-[#4bc1d2] !bg-white !text-[#2C3E50] !shadow-xl focus:!outline-none focus:!ring-4 focus:!ring-[#4bc1d2]/30 placeholder:!text-[#6c757d]">
            <i class="fas fa-search !absolute !left-5 !top-1/2 !-translate-y-1/2 !text-[#4bc1d2] !text-xl"></i>
            <button class="!absolute !right-2 !top-1/2 !-translate-y-1/2 !bg-[#4bc1d2] !text-white !px-6 !py-2 !rounded-full !font-semibold hover:!bg-[#0096b5] !transition-colors">
                Search
            </button>
        </div>
    </div>
</section>

<!-- Filters & Catalog Section -->
<section class="!py-12 !px-[6%]">
    <div class="!max-w-7xl !mx-auto">
        <!-- Filter Bar -->
        <div class="!bg-white !rounded-xl !p-6 !shadow-lg !mb-8">
            <div class="!flex !flex-wrap !gap-4 !items-center !justify-between">
                <div class="!flex !flex-wrap !gap-4">
                    <!-- Category Filter -->
                    <select id="categoryFilter" class="!px-4 !py-2 !border-2 !border-[#bad7e3] !rounded-lg !bg-[#f8feff] focus:!border-[#4bc1d2] focus:!outline-none">
                        <option value="">All Categories</option>
                        <option value="fiction">Fiction</option>
                        <option value="non-fiction">Non-Fiction</option>
                        <option value="science">Science</option>
                        <option value="history">History</option>
                        <option value="biography">Biography</option>
                        <option value="children">Children</option>
                    </select>

                    <!-- Availability Filter -->
                    <select id="availabilityFilter" class="!px-4 !py-2 !border-2 !border-[#bad7e3] !rounded-lg !bg-[#f8feff] focus:!border-[#4bc1d2] focus:!outline-none">
                        <option value="">All Books</option>
                        <option value="available">Available</option>
                        <option value="borrowed">Currently Borrowed</option>
                    </select>

                    <!-- Sort By -->
                    <select id="sortBy" class="!px-4 !py-2 !border-2 !border-[#bad7e3] !rounded-lg !bg-[#f8feff] focus:!border-[#4bc1d2] focus:!outline-none">
                        <option value="title">Sort by Title</option>
                        <option value="author">Sort by Author</option>
                        <option value="year">Sort by Year</option>
                        <option value="rating">Sort by Rating</option>
                    </select>
                </div>

                <div class="!flex !gap-2">
                    <button id="gridViewBtn" class="!p-2 !bg-[#4bc1d2] !text-white !rounded-lg">
                        <i class="fas fa-th-large"></i>
                    </button>
                    <button id="listViewBtn" class="!p-2 !bg-gray-200 !text-gray-600 !rounded-lg hover:!bg-gray-300 !transition-colors">
                        <i class="fas fa-list"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Results Count -->
        <p class="!text-[#34495E] !mb-6"><span class="!font-bold">24</span> books found</p>

        <!-- Book Grid -->
        <div id="bookGrid" class="!grid lg:!grid-cols-4 md:!grid-cols-3 sm:!grid-cols-2 !gap-6">
            <!-- Book Card 1 -->
            <div class="!bg-white !rounded-xl !overflow-hidden !shadow-lg hover:!shadow-xl !transition-all !duration-300 !group">
                <div class="!relative !h-64 !bg-gradient-to-br !from-[#4bc1d2] !to-[#0096b5] !flex !items-center !justify-center">
                    <i class="fas fa-book !text-white/30 !text-8xl"></i>
                    <span class="!absolute !top-3 !right-3 !bg-green-500 !text-white !px-3 !py-1 !rounded-full !text-xs !font-semibold">Available</span>
                </div>
                <div class="!p-5">
                    <h3 class="!font-bold !text-[#2C3E50] !mb-1 !text-lg">The Great Library</h3>
                    <p class="!text-[#34495E] !text-sm !mb-2">by Sarah Mitchell</p>
                    <div class="!flex !items-center !gap-1 !mb-3">
                        <i class="fas fa-star !text-yellow-400 !text-sm"></i>
                        <i class="fas fa-star !text-yellow-400 !text-sm"></i>
                        <i class="fas fa-star !text-yellow-400 !text-sm"></i>
