<!-- CTA Section -->
<section class="!py-16 !px-[6%] !bg-gradient-to-r !from-[#4bc1d2] !to-[#0096b5]">
    <div class="!max-w-4xl !mx-auto !text-center">
        <h2 class="!text-3xl !font-bold !text-white !mb-4">Can't Find What You're Looking For?</h2>
        <p class="!text-white/90 !text-lg !mb-6">
            Sign up for an account to request new books or get personalized recommendations.
        </p>
        <a <a asp-area="Identity" asp-page="/Account/Register" class="!inline-block !px-8 !py-4 !bg-white !text-[#4bc1d2] !rounded-lg !font-bold !text-lg !transition-all !duration-300 hover:!bg-gray-100 hover:!shadow-lg !no-underline">
            <i class="fas fa-user-plus !mr-2"></i>
            Create Free Account
        </a>
    </div>
</section>

@section Scripts {
    <script>
        // (سكريبت الـ Toggle View من ملفك الأصلي)
        const gridViewBtn = document.getElementById('gridViewBtn');
        const listViewBtn = document.getElementById('listViewBtn');
        const bookGrid = document.getElementById('bookGrid');

        if(gridViewBtn && listViewBtn && bookGrid) {
            gridViewBtn.addEventListener('click', () => {
                gridViewBtn.classList.add('!bg-[#4bc1d2]', '!text-white');
                gridViewBtn.classList.remove('!bg-gray-200', '!text-gray-600');
                listViewBtn.classList.add('!bg-gray-200', '!text-gray-600');
                listViewBtn.classList.remove('!bg-[#4bc1d2]', '!text-white');
                bookGrid.classList.remove('!grid-cols-1');
                bookGrid.classList.add('lg:!grid-cols-4', 'md:!grid-cols-3', 'sm:!grid-cols-2');
            });

            listViewBtn.addEventListener('click', () => {
                listViewBtn.classList.add('!bg-[#4bc1d2]', '!text-white');
                listViewBtn.classList.remove('!bg-gray-200', '!text-gray-600');
                gridViewBtn.classList.add('!bg-gray-200', '!text-gray-600');
                gridViewBtn.classList.remove('!bg-[#4bc1d2]', '!text-white');
                bookGrid.classList.remove('lg:!grid-cols-4', 'md:!grid-cols-3', 'sm:!grid-cols-2');
                bookGrid.classList.add('!grid-cols-1');
            });
        }
    </script>
}