@{
    ViewData["Title"] = "Contact Us";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<!-- Hero Section -->
<section class="!bg-gradient-to-br !from-[#2C3E50] !to-[#3d5a73] !py-20 !px-[6%]">
    <div class="!max-w-6xl !mx-auto !text-center">
        <h1 class="!text-4xl md:!text-6xl !font-bold !text-white !mb-6">
            <i class="fas fa-envelope !text-[#4bc1d2] !mr-4"></i>
            Contact Us
        </h1>
        <p class="!text-xl !text-white/90 !max-w-3xl !mx-auto !leading-relaxed">
            Have questions? We'd love to hear from you. Send us a message and we'll respond as soon as possible.
        </p>
    </div>
</section>

<!-- Contact Section -->
<section class="!py-20 !px-[6%]">
    <div class="!max-w-6xl !mx-auto">
        <div class="!grid lg:!grid-cols-2 !gap-12">
            <!-- Contact Info -->
            <div>
                <h2 class="!text-3xl !font-bold !text-[#2C3E50] !mb-6">Get in Touch</h2>
                <p class="!text-[#34495E] !text-lg !leading-relaxed !mb-8">
                    Whether you have a question about features, trials, pricing, or anything else, our team is ready to answer all your questions.
                </p>

                <div class="!space-y-6">
                    <!-- Address -->
                    <div class="!flex !items-start !gap-4">
                        <div class="!w-12 !h-12 !bg-[#4bc1d2]/10 !rounded-xl !flex !items-center !justify-center !flex-shrink-0">
                            <i class="fas fa-map-marker-alt !text-[#4bc1d2] !text-xl"></i>
                        </div>
                        <div>
                            <h4 class="!font-bold !text-[#2C3E50] !mb-1">Our Office</h4>
                            <p class="!text-[#34495E]">123 Library Street<br>Cairo, Egypt 12345</p>
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="!flex !items-start !gap-4">
                        <div class="!w-12 !h-12 !bg-[#4bc1d2]/10 !rounded-xl !flex !items-center !justify-center !flex-shrink-0">
                            <i class="fas fa-envelope !text-[#4bc1d2] !text-xl"></i>
                        </div>
                        <div>
                            <h4 class="!font-bold !text-[#2C3E50] !mb-1">Email Us</h4>
                            <p class="!text-[#34495E]">support@biblio.com<br>sales@biblio.com</p>
                        </div>
                    </div>

                    <!-- Phone -->
                    <div class="!flex !items-start !gap-4">
                        <div class="!w-12 !h-12 !bg-[#4bc1d2]/10 !rounded-xl !flex !items-center !justify-center !flex-shrink-0">
                            <i class="fas fa-phone !text-[#4bc1d2] !text-xl"></i>
                        </div>
                        <div>
                            <h4 class="!font-bold !text-[#2C3E50] !mb-1">Call Us</h4>
                            <p class="!text-[#34495E]">+20 123 456 7890<br>Mon - Fri, 9am - 6pm</p>
                        </div>
                    </div>

                    <!-- Social Media -->
                    <div class="!flex !items-start !gap-4">
                        <div class="!w-12 !h-12 !bg-[#4bc1d2]/10 !rounded-xl !flex !items-center !justify-center !flex-shrink-0">
                            <i class="fas fa-share-alt !text-[#4bc1d2] !text-xl"></i>
                        </div>
                        <div>
                            <h4 class="!font-bold !text-[#2C3E50] !mb-2">Follow Us</h4>
                            <div class="!flex !gap-3">
                                <a href="#" class="!w-10 !h-10 !bg-[#4bc1d2] !rounded-full !flex !items-center !justify-center !text-white hover:!bg-[#0096b5] !transition-colors">
                                    <i class="fab fa-facebook-f"></i>
                                </a>
                                <a href="#" class="!w-10 !h-10 !bg-[#4bc1d2] !rounded-full !flex !items-center !justify-center !text-white hover:!bg-[#0096b5] !transition-colors">
                                    <i class="fab fa-twitter"></i>
                                </a>
                                <a href="#" class="!w-10 !h-10 !bg-[#4bc1d2] !rounded-full !flex !items-center !justify-center !text-white hover:!bg-[#0096b5] !transition-colors">
                                    <i class="fab fa-instagram"></i>
                                </a>
                                <a href="#" class="!w-10 !h-10 !bg-[#4bc1d2] !rounded-full !flex !items-center !justify-center !text-white hover:!bg-[#0096b5] !transition-colors">
                                    <i class="fab fa-linkedin-in"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="!bg-white !rounded-2xl !p-8 !shadow-xl !border !border-gray-100">
                <h3 class="!text-2xl !font-bold !text-[#2C3E50] !mb-6">Send us a Message</h3>
                <form id="contactForm" class="!space-y-6">
                    <div class="!grid sm:!grid-cols-2 !gap-4">
                        <div>
                            <label class="!block !text-[#34495E] !font-semibold !mb-2">First Name</label>
                            <input type="text" id="firstName" required
                                   class="!w-full !px-4 !py-3 !border-2 !border-[#bad7e3] !rounded-lg !bg-[#f8feff] focus:!border-[#4bc1d2] focus:!outline-none !transition-colors"
                                   placeholder="John">
                        </div>
                        <div>
                            <label class="!block !text-[#34495E] !font-semibold !mb-2">Last Name</label>
                            <input type="text" id="lastName" required
                                   class="!w-full !px-4 !py-3 !border-2 !border-[#bad7e3] !rounded-lg !bg-[#f8feff] focus:!border-[#4bc1d2] focus:!outline-none !transition-colors"
                                   placeholder="Doe">
                        </div>
                    </div>

                    <div>
                        <label class="!block !text-[#34495E] !font-semibold !mb-2">Email Address</label>
                        <input type="email" id="email" required
                               class="!w-full !px-4 !py-3 !border-2 !border-[#bad7e3] !rounded-lg !bg-[#f8feff] focus:!border-[#4bc1d2] focus:!outline-none !transition-colors"
                               placeholder="john@example.com">
                    </div>

                    <div>
                        <label class="!block !text-[#34495E] !font-semibold !mb-2">Subject</label>
                        <select id="subject" required
                                class="!w-full !px-4 !py-3 !border-2 !border-[#bad7e3] !rounded-lg !bg-[#f8feff] focus:!border-[#4bc1d2] focus:!outline-none !transition-colors">
                            <option value="">Select a subject</option>
                            <option value="general">General Inquiry</option>
                            <option value="support">Technical Support</option>
                            <option value="sales">Sales Question</option>
                            <option value="feedback">Feedback</option>
                            <option value="other">Other</option>
                        </select>
                    </div>

                    <div>
                        <label class="!block !text-[#34495E] !font-semibold !mb-2">Message</label>
                        <textarea id="message" rows="5" required
                                  class="!w-full !px-4 !py-3 !border-2 !border-[#bad7e3] !rounded-lg !bg-[#f8feff] focus:!border-[#4bc1d2] focus:!outline-none !transition-colors !resize-none"
                                  placeholder="How can we help you?"></textarea>
                    </div>

                    <button type="submit"
                            class="!w-full !py-4 !bg-[#4bc1d2] !text-white !rounded-lg !font-bold !text-lg !transition-all !duration-300 hover:!bg-[#0096b5] hover:!shadow-lg">
                        <i class="fas fa-paper-plane !mr-2"></i>
                        Send Message
                    </button>
                </form>

                <!-- Success Message -->
                <div id="successMessage" class="!hidden !mt-6 !p-4 !bg-green-100 !border !border-green-400 !rounded-lg !text-green-700 !text-center">
                    <i class="fas fa-check-circle !mr-2"></i>
                    Thank you! Your message has been sent successfully.
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Map Section -->
<section class="!py-12 !px-[6%] !bg-white">
    <div class="!max-w-6xl !mx-auto">
        <h2 class="!text-3xl !font-bold !text-[#2C3E50] !mb-8 !text-center">Find Us</h2>
        <div class="!rounded-2xl !overflow-hidden !shadow-xl !h-[400px] !bg-[#E8EFF3] !flex !items-center !justify-center">
            <div class="!text-center">
                <i class="fas fa-map-marked-alt !text-[#4bc1d2] !text-6xl !mb-4"></i>
                <p class="!text-[#34495E] !text-lg">Interactive map would be displayed here</p>
                <p class="!text-[#34495E]/70">123 Library Street, Cairo, Egypt</p>
            </div>
        </div>
    </div>
</section>

<!-- FAQ Section -->
<section class="!py-20 !px-[6%]">
    <div class="!max-w-4xl !mx-auto">
        <h2 class="!text-3xl !font-bold !text-[#2C3E50] !mb-8 !text-center">
            <i class="fas fa-question-circle !text-[#4bc1d2] !mr-2"></i>
            Frequently Asked Questions
        </h2>
        <div class="!space-y-4">
            <div class="!bg-white !rounded-xl !p-6 !shadow-md !border !border-gray-100">
                <h3 class="!text-lg !font-semibold !text-[#2C3E50] !mb-2">What are your support hours?</h3>
                <p class="!text-[#34495E]">Our support team is available Monday through Friday, 9am to 6pm (Egypt time). For urgent matters, you can email us anytime and we'll get back to you as soon as possible.</p>
            </div>
            <div class="!bg-white !rounded-xl !p-6 !shadow-md !border !border-gray-100">
                <h3 class="!text-lg !font-semibold !text-[#2C3E50] !mb-2">How quickly do you respond to inquiries?</h3>
                <p class="!text-[#34495E]">We aim to respond to all inquiries within 24 hours during business days. Priority support customers receive responses within 4 hours.</p>
            </div>
            <div class="!bg-white !rounded-xl !p-6 !shadow-md !border !border-gray-100">
                <h3 class="!text-lg !font-semibold !text-[#2C3E50] !mb-2">Do you offer on-site training?</h3>
                <p class="!text-[#34495E]">Yes! We offer both on-site and remote training sessions for teams. Contact our sales team to learn more about our training packages.</p>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Form submission script from contact.html
        const contactForm = document.getElementById('contactForm');
        const successMessage = document.getElementById('successMessage');

        if(contactForm) {
            contactForm.addEventListener('submit', (e) => {
                e.preventDefault();
                const submitBtn = contactForm.querySelector('button[type="submit"]');
                const originalText = submitBtn.innerHTML;
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin !mr-2"></i>Sending...';
                submitBtn.disabled = true;

                setTimeout(() => {
                    contactForm.reset();
                    submitBtn.innerHTML = originalText;
                    submitBtn.disabled = false;
                    successMessage.classList.remove('!hidden');
                    setTimeout(() => {
                        successMessage.classList.add('!hidden');
                    }, 5000);
                }, 1500);
            });
        }
    </script>
}