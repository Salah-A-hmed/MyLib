@{
ViewData["Title"] = "Events";
Layout = "~/Views/Shared/_PagesLayout.cshtml";
}
<!-- Hero Section -->
<section class="!bg-gradient-to-br !from-[#2C3E50] !to-[#3d5a73] !py-20 !px-[6%]">
    <div class="!max-w-6xl !mx-auto !text-center">
        <h1 class="!text-4xl md:!text-6xl !font-bold !text-white !mb-6">
            <i class="fas fa-calendar-alt !text-[#4bc1d2] !mr-4"></i>
            Community Events
        </h1>
        <p class="!text-xl !text-white/90 !max-w-3xl !mx-auto !leading-relaxed">
            Join us for exciting events, workshops, and programs throughout the year. Engage with your community and expand your horizons.
        </p>
    </div>
</section>

<!-- Filters -->
<section class="!py-8 !px-[6%] !bg-white !border-b !border-gray-200">
    <div class="!max-w-6xl !mx-auto">
        <div class="!flex !flex-wrap !gap-4 !items-center !justify-between">
            <div class="!flex !flex-wrap !gap-3">
                <button class="!px-5 !py-2 !bg-[#4bc1d2] !text-white !rounded-full !font-semibold !transition-colors">All Events</button>
                <button class="!px-5 !py-2 !bg-[#E8EFF3] !text-[#34495E] !rounded-full !font-semibold hover:!bg-[#4bc1d2] hover:!text-white !transition-colors">Workshops</button>
                <button class="!px-5 !py-2 !bg-[#E8EFF3] !text-[#34495E] !rounded-full !font-semibold hover:!bg-[#4bc1d2] hover:!text-white !transition-colors">Book Clubs</button>
                <button class="!px-5 !py-2 !bg-[#E8EFF3] !text-[#34495E] !rounded-full !font-semibold hover:!bg-[#4bc1d2] hover:!text-white !transition-colors">Kids</button>
                <button class="!px-5 !py-2 !bg-[#E8EFF3] !text-[#34495E] !rounded-full !font-semibold hover:!bg-[#4bc1d2] hover:!text-white !transition-colors">Author Talks</button>
            </div>
            <div class="!flex !items-center !gap-2">
                <i class="fas fa-calendar !text-[#34495E]"></i>
                <select class="!px-4 !py-2 !border-2 !border-[#bad7e3] !rounded-lg !bg-[#f8feff] focus:!border-[#4bc1d2] focus:!outline-none">
                    <option>This Month</option>
                    <option>Next Month</option>
                    <option>All Upcoming</option>
                </select>
            </div>
        </div>
    </div>
</section>

<!-- Featured Event -->
<section class="!py-12 !px-[6%]">
    <div class="!max-w-6xl !mx-auto">
        <h2 class="!text-2xl !font-bold !text-[#2C3E50] !mb-6">
            <i class="fas fa-star !text-[#4bc1d2] !mr-2"></i>
            Featured Event
        </h2>
        <div class="!bg-gradient-to-r !from-[#4bc1d2] !to-[#0096b5] !rounded-2xl !overflow-hidden !shadow-xl">
            <div class="!grid md:!grid-cols-2">
                <div class="!p-10 !text-white">
                    <span class="!inline-block !bg-white/20 !px-4 !py-1 !rounded-full !text-sm !font-semibold !mb-4">Featured</span>
                    <h3 class="!text-3xl !font-bold !mb-4">Annual Book Fair 2025</h3>
                    <p class="!text-white/90 !mb-6 !leading-relaxed">
                        Join us for the biggest book event of the year! Explore thousands of books, meet authors, attend workshops, and discover your next favorite read.
                    </p>
                    <div class="!space-y-3 !mb-8">
                        <div class="!flex !items-center !gap-3">
                            <i class="fas fa-calendar-day !text-xl"></i>
                            <span>December 15-17, 2025</span>
                        </div>
                        <div class="!flex !items-center !gap-3">
                            <i class="fas fa-clock !text-xl"></i>
                            <span>10:00 AM - 8:00 PM</span>
                        </div>
                        <div class="!flex !items-center !gap-3">
                            <i class="fas fa-map-marker-alt !text-xl"></i>
                            <span>Main Library Hall, Cairo</span>
                        </div>
                    </div>
                    <button class="!px-8 !py-3 !bg-white !text-[#4bc1d2] !rounded-lg !font-bold !transition-all hover:!shadow-lg">
                        <i class="fas fa-ticket-alt !mr-2"></i>
                        Register Now
                    </button>
                </div>
                <div class="!bg-[#2C3E50]/20 !flex !items-center !justify-center !p-10">
                    <div class="!text-center !text-white">
                        <i class="fas fa-book-open !text-9xl !opacity-50"></i>
                        <p class="!mt-4 !text-xl !opacity-70">3-Day Event</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Upcoming Events -->
<section class="!py-12 !px-[6%]">
    <div class="!max-w-6xl !mx-auto">
        <h2 class="!text-2xl !font-bold !text-[#2C3E50] !mb-8">
            <i class="fas fa-calendar-check !text-[#4bc1d2] !mr-2"></i>
            Upcoming Events
        </h2>

        <div class="!grid lg:!grid-cols-3 md:!grid-cols-2 !gap-6">
            <!-- Event Card 1 -->
            <div class="!bg-white !rounded-xl !overflow-hidden !shadow-lg hover:!shadow-xl !transition-all !duration-300">
                <div class="!bg-gradient-to-r !from-[#e74c3c] !to-[#c0392b] !p-6 !text-white !relative">
                    <span class="!absolute !top-4 !right-4 !bg-white/20 !px-3 !py-1 !rounded-full !text-sm">Workshop</span>
                    <div class="!text-center">
                        <p class="!text-5xl !font-bold">28</p>
                        <p class="!text-lg">Nov</p>
                    </div>
                </div>
                <div class="!p-6">
                    <h3 class="!text-xl !font-bold !text-[#2C3E50] !mb-2">Creative Writing Workshop</h3>
                    <p class="!text-[#34495E] !text-sm !mb-4">Learn the art of storytelling from award-winning author Jessica Moore.</p>
                    <div class="!space-y-2 !text-sm !text-[#34495E] !mb-4">
                        <div class="!flex !items-center !gap-2">
                            <i class="fas fa-clock !text-[#4bc1d2]"></i>
                            <span>2:00 PM - 5:00 PM</span>
                        </div>
                        <div class="!flex !items-center !gap-2">
                            <i class="fas fa-map-marker-alt !text-[#4bc1d2]"></i>
                            <span>Room 201, Main Building</span>
                        </div>
                        <div class="!flex !items-center !gap-2">
                            <i class="fas fa-users !text-[#4bc1d2]"></i>
                            <span>15 spots remaining</span>
                        </div>
                    </div>
                    <button class="!w-full !py-2 !bg-[#4bc1d2] !text-white !rounded-lg !font-semibold hover:!bg-[#0096b5] !transition-colors">
                        Register
                    </button>
                </div>
            </div>

            <!-- Event Card 2 -->
            <div class="!bg-white !rounded-xl !overflow-hidden !shadow-lg hover:!shadow-xl !transition-all !duration-300">
                <div class="!bg-gradient-to-r !from-[#9b59b6] !to-[#8e44ad] !p-6 !text-white !relative">
                    <span class="!absolute !top-4 !right-4 !bg-white/20 !px-3 !py-1 !rounded-full !text-sm">Book Club</span>
                    <div class="!text-center">
                        <p class="!text-5xl !font-bold">02</p>
                        <p class="!text-lg">Dec</p>
                    </div>
                </div>
                <div class="!p-6">
                    <h3 class="!text-xl !font-bold !text-[#2C3E50] !mb-2">Monthly Book Club Meeting</h3>
                    <p class="!text-[#34495E] !text-sm !mb-4">Join us to discuss "The Midnight Library" by Matt Haig.</p>
                    <div class="!space-y-2 !text-sm !text-[#34495E] !mb-4">
                        <div class="!flex !items-center !gap-2">
                            <i class="fas fa-clock !text-[#4bc1d2]"></i>
                            <span>6:00 PM - 8:00 PM</span>
                        </div>
                        <div class="!flex !items-center !gap-2">
                            <i class="fas fa-map-marker-alt !text-[#4bc1d2]"></i>
                            <span>Community Room</span>
                        </div>
                        <div class="!flex !items-center !gap-2">
                            <i class="fas fa-users !text-[#4bc1d2]"></i>
                            <span>Open to all</span>
                        </div>
                    </div>
                    <button class="!w-full !py-2 !bg-[#4bc1d2] !text-white !rounded-lg !font-semibold hover:!bg-[#0096b5] !transition-colors">
                        Join Club
                    </button>
                </div>
            </div>

            <!-- Event Card 3 -->
            <div class="!bg-white !rounded-xl !overflow-hidden !shadow-lg hover:!shadow-xl !transition-all !duration-300">
                <div class="!bg-gradient-to-r !from-[#f39c12] !to-[#e67e22] !p-6 !text-white !relative">
                    <span class="!absolute !top-4 !right-4 !bg-white/20 !px-3 !py-1 !rounded-full !text-sm">Kids</span>
                    <div class="!text-center">
                        <p class="!text-5xl !font-bold">05</p>
                        <p class="!text-lg">Dec</p>
                    </div>
                </div>
                <div class="!p-6">
                    <h3 class="!text-xl !font-bold !text-[#2C3E50] !mb-2">Storytime Saturday</h3>
                    <p class="!text-[#34495E] !text-sm !mb-4">Fun interactive storytelling session for kids ages 4-8.</p>
                    <div class="!space-y-2 !text-sm !text-[#34495E] !mb-4">
                        <div class="!flex !items-center !gap-2">
                            <i class="fas fa-clock !text-[#4bc1d2]"></i>
                            <span>11:00 AM - 12:00 PM</span>
                        </div>
                        <div class="!flex !items-center !gap-2">
                            <i class="fas fa-map-marker-alt !text-[#4bc1d2]"></i>
                            <span>Children's Section</span>
                        </div>
                        <div class="!flex !items-center !gap-2">
                            <i class="fas fa-users !text-[#4bc1d2]"></i>
                            <span>Free admission</span>
                        </div>
                    </div>
                    <button class="!w-full !py-2 !bg-[#4bc1d2] !text-white !rounded-lg !font-semibold hover:!bg-[#0096b5] !transition-colors">
                        RSVP
                    </button>
                </div>
            </div>

            <!-- Event Card 4 -->
            <div class="!bg-white !rounded-xl !overflow-hidden !shadow-lg hover:!shadow-xl !transition-all !duration-300">
                <div class="!bg-gradient-to-r !from-[#1abc9c] !to-[#16a085] !p-6 !text-white !relative">
                    <span class="!absolute !top-4 !right-4 !bg-white/20 !px-3 !py-1 !rounded-full !text-sm">Author Talk</span>
                    <div class="!text-center">
                        <p class="!text-5xl !font-bold">10</p>
                        <p class="!text-lg">Dec</p>
                    </div>
                </div>
                <div class="!p-6">
                    <h3 class="!text-xl !font-bold !text-[#2C3E50] !mb-2">Meet the Author: John Smith</h3>
                    <p class="!text-[#34495E] !text-sm !mb-4">Bestselling author discusses his new novel "Echoes of Tomorrow".</p>
                    <div class="!space-y-2 !text-sm !text-[#34495E] !mb-4">
                        <div class="!flex !items-center !gap-2">
                            <i class="fas fa-clock !text-[#4bc1d2]"></i>
                            <span>7:00 PM - 9:00 PM</span>
                        </div>
                        <div class="!flex !items-center !gap-2">
                            <i class="fas fa-map-marker-alt !text-[#4bc1d2]"></i>
                            <span>Auditorium</span>
                        </div>
                        <div class="!flex !items-center !gap-2">
                            <i class="fas fa-users !text-[#4bc1d2]"></i>
                            <span>Book signing included</span>
                        </div>
                    </div>
                    <button class="!w-full !py-2 !bg-[#4bc1d2] !text-white !rounded-lg !font-semibold hover:!bg-[#0096b5] !transition-colors">
                        Get Tickets
                    </button>
                </div>
            </div>

            <!-- Event Card 5 -->
            <div class="!bg-white !rounded-xl !overflow-hidden !shadow-lg hover:!shadow-xl !transition-all !duration-300">
                <div class="!bg-gradient-to-r !from-[#3498db] !to-[#2980b9] !p-6 !text-white !relative">
                    <span class="!absolute !top-4 !right-4 !bg-white/20 !px-3 !py-1 !rounded-full !text-sm">Workshop</span>
                    <div class="!text-center">
                        <p class="!text-5xl !font-bold">12</p>
                        <p class="!text-lg">Dec</p>
                    </div>
                </div>
                <div class="!p-6">
                    <h3 class="!text-xl !font-bold !text-[#2C3E50] !mb-2">Digital Literacy for Seniors</h3>
                    <p class="!text-[#34495E] !text-sm !mb-4">Learn to navigate e-books and digital library resources.</p>
                    <div class="!space-y-2 !text-sm !text-[#34495E] !mb-4">
                        <div class="!flex !items-center !gap-2">
                            <i class="fas fa-clock !text-[#4bc1d2]"></i>
                            <span>10:00 AM - 12:00 PM</span>
                        </div>
                        <div class="!flex !items-center !gap-2">
                            <i class="fas fa-map-marker-alt !text-[#4bc1d2]"></i>
                            <span>Computer Lab</span>
                        </div>
                        <div class="!flex !items-center !gap-2">
                            <i class="fas fa-users !text-[#4bc1d2]"></i>
                            <span>10 spots remaining</span>
                        </div>
                    </div>
                    <button class="!w-full !py-2 !bg-[#4bc1d2] !text-white !rounded-lg !font-semibold hover:!bg-[#0096b5] !transition-colors">
                        Sign Up
                    </button>
                </div>
            </div>

            <!-- Event Card 6 -->
            <div class="!bg-white !rounded-xl !overflow-hidden !shadow-lg hover:!shadow-xl !transition-all !duration-300">
                <div class="!bg-gradient-to-r !from-[#34495e] !to-[#2c3e50] !p-6 !text-white !relative">
                    <span class="!absolute !top-4 !right-4 !bg-white/20 !px-3 !py-1 !rounded-full !text-sm">Special</span>
                    <div class="!text-center">
                        <p class="!text-5xl !font-bold">20</p>
                        <p class="!text-lg">Dec</p>
                    </div>
                </div>
                <div class="!p-6">
                    <h3 class="!text-xl !font-bold !text-[#2C3E50] !mb-2">Holiday Movie Night</h3>
                    <p class="!text-[#34495E] !text-sm !mb-4">Join us for a screening of classic holiday films with popcorn!</p>
                    <div class="!space-y-2 !text-sm !text-[#34495E] !mb-4">
                        <div class="!flex !items-center !gap-2">
                            <i class="fas fa-clock !text-[#4bc1d2]"></i>
                            <span>5:00 PM - 8:00 PM</span>
                        </div>
                        <div class="!flex !items-center !gap-2">
                            <i class="fas fa-map-marker-alt !text-[#4bc1d2]"></i>
                            <span>Main Hall</span>
                        </div>
                        <div class="!flex !items-center !gap-2">
                            <i class="fas fa-users !text-[#4bc1d2]"></i>
                            <span>Family friendly</span>
                        </div>
                    </div>
                    <button class="!w-full !py-2 !bg-[#4bc1d2] !text-white !rounded-lg !font-semibold hover:!bg-[#0096b5] !transition-colors">
                        Reserve Spot
                    </button>
                </div>
            </div>
        </div>

        <!-- Load More -->
        <div class="!text-center !mt-12">
            <button class="!px-8 !py-3 !bg-[#E8EFF3] !text-[#2C3E50] !rounded-lg !font-semibold hover:!bg-gray-200 !transition-colors">
                <i class="fas fa-plus !mr-2"></i>
                Load More Events
            </button>
        </div>
    </div>
</section>

<!-- Newsletter -->
<section class="!py-16 !px-[6%] !bg-gradient-to-r !from-[#4bc1d2] !to-[#0096b5]">
    <div class="!max-w-4xl !mx-auto !text-center">
        <h2 class="!text-3xl !font-bold !text-white !mb-4">
            <i class="fas fa-bell !mr-2"></i>
            Never Miss an Event
        </h2>
        <p class="!text-white/90 !text-lg !mb-8">
            Subscribe to our newsletter and get notified about upcoming events and programs.
        </p>
        <div class="!flex !flex-col sm:!flex-row !gap-4 !justify-center !max-w-xl !mx-auto">
            <input type="email" placeholder="Enter your email"
                    class="!flex-1 !px-6 !py-4 !rounded-lg !border-0 focus:!outline-none focus:!ring-4 focus:!ring-white/30">
            <button class="!px-8 !py-4 !bg-[#2C3E50] !text-white !rounded-lg !font-bold !transition-all hover:!bg-[#1a252f] hover:!shadow-lg">
                <i class="fas fa-paper-plane !mr-2"></i>
                Subscribe
            </button>
        </div>
    </div>
</section>

