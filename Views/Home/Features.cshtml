@{
    ViewData["Title"] = "Features";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<!-- Hero Section -->
<section class="!bg-gradient-to-br !from-[#2C3E50] !to-[#3d5a73] !py-20 !px-[6%]">
    <div class="!max-w-6xl !mx-auto !text-center">
        <h1 class="!text-4xl md:!text-6xl !font-bold !text-white !mb-6">
            <i class="fas fa-rocket !text-[#4bc1d2] !mr-4"></i>
            Powerful Features
        </h1>
        <p class="!text-xl !text-white/90 !max-w-3xl !mx-auto !leading-relaxed">
            Discover all the tools and features that make Biblio the ultimate library management system for modern libraries.
        </p>
    </div>
</section>

<!-- Main Features Section -->
<section class="!py-20 !px-[6%]">
    <div class="!max-w-6xl !mx-auto">
        <div class="!text-center !mb-16">
            <span class="!text-[#4bc1d2] !font-semibold !text-lg">What We Offer</span>
            <h2 class="!text-4xl !font-bold !text-[#2C3E50] !mt-2">Core Features</h2>
        </div>

        <div class="!grid lg:!grid-cols-3 md:!grid-cols-2 !gap-8">
            <!-- Feature 1: Borrow Books -->
            <div class="!bg-white !rounded-2xl !p-8 !shadow-lg hover:!shadow-xl !transition-all !duration-300 !border !border-gray-100">
                <div class="!w-16 !h-16 !bg-[#4bc1d2]/10 !rounded-xl !flex !items-center !justify-center !mb-6">
                    <i class="fas fa-book-reader !text-[#4bc1d2] !text-3xl"></i>
                </div>
                <h3 class="!text-xl !font-bold !text-[#2C3E50] !mb-4">Borrow Books</h3>
                <p class="!text-[#34495E] !leading-relaxed !mb-4">
                    Easy access to a wide selection of books for all ages. Our streamlined borrowing process lets patrons check out books in seconds.
                </p>
                <ul class="!space-y-2 !text-[#34495E]">
                    <li class="!flex !items-center !gap-2">
                        <i class="fas fa-check !text-[#4bc1d2]"></i>
                        Quick checkout process
                    </li>
                    <li class="!flex !items-center !gap-2">
                        <i class="fas fa-check !text-[#4bc1d2]"></i>
                        Automatic due date reminders
                    </li>
                    <li class="!flex !items-center !gap-2">
                        <i class="fas fa-check !text-[#4bc1d2]"></i>
                        Renewal options available
                    </li>
                </ul>
            </div>

            <!-- Feature 2: Book Returns -->
            <div class="!bg-white !rounded-2xl !p-8 !shadow-lg hover:!shadow-xl !transition-all !duration-300 !border !border-gray-100">
                <div class="!w-16 !h-16 !bg-[#4bc1d2]/10 !rounded-xl !flex !items-center !justify-center !mb-6">
                    <i class="fas fa-undo-alt !text-[#4bc1d2] !text-3xl"></i>
                </div>
                <h3 class="!text-xl !font-bold !text-[#2C3E50] !mb-4">Book Returns</h3>
                <p class="!text-[#34495E] !leading-relaxed !mb-4">
                    Return books hassle-free with our quick drop-off system. Track returns instantly and keep accounts in good standing.
                </p>
                <ul class="!space-y-2 !text-[#34495E]">
                    <li class="!flex !items-center !gap-2">
                        <i class="fas fa-check !text-[#4bc1d2]"></i>
                        Multiple return points
                    </li>
                    <li class="!flex !items-center !gap-2">
                        <i class="fas fa-check !text-[#4bc1d2]"></i>
                        Instant return confirmation
                    </li>
                    <li class="!flex !items-center !gap-2">
                        <i class="fas fa-check !text-[#4bc1d2]"></i>
                        Late fee management
                    </li>
                </ul>
            </div>

            <!-- Feature 3: Account Management -->
            <div class="!bg-white !rounded-2xl !p-8 !shadow-lg hover:!shadow-xl !transition-all !duration-300 !border !border-gray-100">
                <div class="!w-16 !h-16 !bg-[#4bc1d2]/10 !rounded-xl !flex !items-center !justify-center !mb-6">
                    <i class="fas fa-user-cog !text-[#4bc1d2] !text-3xl"></i>
                </div>
                <h3 class="!text-xl !font-bold !text-[#2C3E50] !mb-4">Account Management</h3>
                <p class="!text-[#34495E] !leading-relaxed !mb-4">
                    Manage your library account online. Update your information, check your borrowing history, and more.
                </p>
                <ul class="!space-y-2 !text-[#34495E]">
                    <li class="!flex !items-center !gap-2">
                        <i class="fas fa-check !text-[#4bc1d2]"></i>
                        Personal dashboard
                    </li>
                    <li class="!flex !items-center !gap-2">
                        <i class="fas fa-check !text-[#4bc1d2]"></i>
                        Borrowing history
                    </li>
                    <li class="!flex !items-center !gap-2">
                        <i class="fas fa-check !text-[#4bc1d2]"></i>
                        Preference settings
                    </li>
                </ul>
            </div>

            <!-- Feature 4: Online Catalog -->
            <div class="!bg-white !rounded-2xl !p-8 !shadow-lg hover:!shadow-xl !transition-all !duration-300 !border !border-gray-100">
                <div class="!w-16 !h-16 !bg-[#4bc1d2]/10 !rounded-xl !flex !items-center !justify-center !mb-6">
                    <i class="fas fa-search !text-[#4bc1d2] !text-3xl"></i>
                </div>
                <h3 class="!text-xl !font-bold !text-[#2C3E50] !mb-4">Online Catalog</h3>
                <p class="!text-[#34495E] !leading-relaxed !mb-4">
                    Explore our complete library catalog from anywhere. Find titles, check availability, and place holds easily.
                </p>
                <ul class="!space-y-2 !text-[#34495E]">
                    <li class="!flex !items-center !gap-2">
                        <i class="fas fa-check !text-[#4bc1d2]"></i>
                        Advanced search filters
                    </li>
                    <li class="!flex !items-center !gap-2">
                        <i class="fas fa-check !text-[#4bc1d2]"></i>
                        Real-time availability
                    </li>
                    <li class="!flex !items-center !gap-2">
                        <i class="fas fa-check !text-[#4bc1d2]"></i>
                        Hold reservations
                    </li>
                </ul>
            </div>

            <!-- Feature 5: Analytics Dashboard -->
            <div class="!bg-white !rounded-2xl !p-8 !shadow-lg hover:!shadow-xl !transition-all !duration-300 !border !border-gray-100">
                <div class="!w-16 !h-16 !bg-[#4bc1d2]/10 !rounded-xl !flex !items-center !justify-center !mb-6">
                    <i class="fas fa-chart-line !text-[#4bc1d2] !text-3xl"></i>
                </div>
                <h3 class="!text-xl !font-bold !text-[#2C3E50] !mb-4">Analytics Dashboard</h3>
                <p class="!text-[#34495E] !leading-relaxed !mb-4">
                    Gain insights into library usage with comprehensive analytics. Track trends and make data-driven decisions.
                </p>
                <ul class="!space-y-2 !text-[#34495E]">
                    <li class="!flex !items-center !gap-2">
                        <i class="fas fa-check !text-[#4bc1d2]"></i>
                        Usage statistics
                    </li>
                    <li class="!flex !items-center !gap-2">
                        <i class="fas fa-check !text-[#4bc1d2]"></i>
                        Custom reports
                    </li>
                    <li class="!flex !items-center !gap-2">
                        <i class="fas fa-check !text-[#4bc1d2]"></i>
                        Trend analysis
                    </li>
                </ul>
            </div>

            <!-- Feature 6: Multi-Platform -->
            <div class="!bg-white !rounded-2xl !p-8 !shadow-lg hover:!shadow-xl !transition-all !duration-300 !border !border-gray-100">
                <div class="!w-16 !h-16 !bg-[#4bc1d2]/10 !rounded-xl !flex !items-center !justify-center !mb-6">
                    <i class="fas fa-mobile-alt !text-[#4bc1d2] !text-3xl"></i>
                </div>
                <h3 class="!text-xl !font-bold !text-[#2C3E50] !mb-4">Multi-Platform Access</h3>
                <p class="!text-[#34495E] !leading-relaxed !mb-4">
                    Access Biblio from any device. Our responsive design works seamlessly on desktop, tablet, and mobile.
                </p>
                <ul class="!space-y-2 !text-[#34495E]">
                    <li class="!flex !items-center !gap-2">
                        <i class="fas fa-check !text-[#4bc1d2]"></i>
                        Responsive design
                    </li>
                    <li class="!flex !items-center !gap-2">
                        <i class="fas fa-check !text-[#4bc1d2]"></i>
                        Mobile app ready
                    </li>
                    <li class="!flex !items-center !gap-2">
                        <i class="fas fa-check !text-[#4bc1d2]"></i>
                        Offline capabilities
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>

<!-- Why Choose Us Section -->
