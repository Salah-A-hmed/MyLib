@model IEnumerable<Biblio.Models.Notification>
@{
    ViewData["Title"] = "Notifications";
    var unreadCount = (int)(ViewData["UnreadCount"] ?? 0);
}

@* (هنستخدم نفس الستايل اللي عملناه المرة اللي فاتت) *@
<style>
    /* Use a unique icon class to avoid global conflicts */
    .notification-card .Index-Notification-Icon {
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        width: 40px;
        text-align: center;
        margin-right: 1.25rem;
        flex-shrink: 0;
    }

    .notification-card {
        display: flex;
        align-items: center;
        padding: 1rem 1.25rem;
        border-bottom: 1px solid var(--border-color);
        text-decoration: none;
        color: inherit;
        transition: background-color 0.15s, color 0.15s;
    }

    .notification-card:last-child {
        border-bottom: none;
    }

    /* Default hover for all notification cards (read) */
    .notification-card:hover {
        background-color: #f8f9fa;
        text-decoration: none;
    }

    /* Per-type icon color */
    .notification-card.type-Alert .Index-Notification-Icon {
        color: #dc3545;
    }

    .notification-card.type-Warning .Index-Notification-Icon {
        color: #b28400; /* darker yellow/brown for visibility */
    }

    .notification-card.type-Information .Index-Notification-Icon {
        color: #0dcaf0;
    }

    .notification-body {
        flex-grow: 1;
    }

    .notification-message {
        font-size: 1rem;
        font-weight: 500;
        color: #212529;
    }

    .notification-meta {
        font-size: 0.85rem;
        color: #6c757d;
        margin-top: 4px;
    }

    .notification-date {
        font-size: 0.85rem;
        color: #6c757d;
        flex-shrink: 0;
    }

    /* Unread variant — left border and bg vary by type to match icons */
    .notification-card.notification-unread {
        background-color: #f8f9fa;
        border-left: 4px solid var(--active-bg); /* fallback */
    }

    .notification-card.notification-unread .notification-message {
        font-weight: 700;
    }

    /* unread + type-specific left border + hover tint */
    .notification-card.notification-unread.type-Alert {
        border-left-color: #dc3545;
        background-color: rgba(220,53,69,0.04);
    }

    .notification-card.notification-unread.type-Warning {
        border-left-color: #ffc107;
        background-color: rgba(255,193,7,0.04);
    }

    .notification-card.notification-unread.type-Information {
        border-left-color: #0dcaf0;
        background-color: rgba(13,202,240,0.04);
    }
</style>
<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4>All Notifications</h4>

        @* (تعديل 1) إضافة زرار "Mark All as Read" *@
        @if (unreadCount > 0)
        {
            <form asp-action="MarkAllAsRead" method="post">
                <button type="submit" class="btn btn-sm btn-outline-secondary">
                    <i class="fas fa-check-double"></i> Mark all as read (@unreadCount)
                </button>
            </form>
        }
    </div>
    <div class="card-body p-0">
        @if (!Model.Any())
        {
            <div class="text-center p-5 text-muted">
                <i class="fas fa-check-circle fa-3x mb-3"></i>
                <h5>You're all caught up!</h5>
                <p>You have no notifications right now.</p>
            </div>
        }
        else
        {
            <div class="list-group list-group-flush">
                @foreach (var item in Model)
                {
                    string iconClass = "fa-info-circle";
                    switch (item.Type)
                    {
                        case NotificationType.Alert:
                            iconClass = "fa-exclamation-triangle";
                            break;
                        case NotificationType.Warning:
                            iconClass = "fa-clock";
                            break;
                    }
                    var cardClass = (item.Status == NotificationStatus.Unread) ? "notification-unread" : "";
                    // add the type class to the card so css can style border/hover per type
                    var typeClass = $"type-{item.Type}";

                    // (تعديل 2) تغيير اللينك عشان يشاور على دالة "GoTo"
                    <a asp-action="GoTo" asp-route-id="@item.ID" class="notification-card @cardClass @typeClass">

                        <div class="Index-Notification-Icon type-@item.Type">
                            <i class="fas @iconClass"></i>
                        </div>

                        <div class="notification-body">
                            <div class="notification-message">@item.Message</div>
                            <div class="notification-meta">
                                @if (item.Book != null)
                                {
                                    <span>Book: @item.Book.Title</span>
                                }
                                @if (item.Visitor != null)
                                {
                                    <span> | Visitor: @item.Visitor.Name</span>
                                }
                            </div>
                        </div>

                        <div class="notification-date">
                            @GetTimeAgo(@item.Date)
                        </div>
                    </a>
                }
            </div>
        }
    </div>
</div>
@* (جديد 3) دالة Helper بتاعة عرض الوقت *@
@functions {
    public static string GetTimeAgo(DateTime date)
    {
        TimeSpan timeSpan = DateTime.Now.Subtract(date);

        if (timeSpan <= TimeSpan.FromSeconds(60))
            return $"{timeSpan.Seconds}s ago";
        if (timeSpan <= TimeSpan.FromMinutes(60))
            return $"{timeSpan.Minutes}m ago";
        if (timeSpan <= TimeSpan.FromHours(24))
            return $"{timeSpan.Hours}h ago";
        if (timeSpan <= TimeSpan.FromDays(30))
            return $"{timeSpan.Days}d ago";
        if (timeSpan <= TimeSpan.FromDays(365))
            return $"{timeSpan.Days / 30}mo ago";

        return $"{timeSpan.Days / 365}y ago";
    }
}