<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/@@tailwindcss/browser@4"></script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Biblio.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Library.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Collection.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Borrow&Visitor.css" asp-append-version="true" />

    @* Render optional page-specific styles section (prevents the "Styles" section not rendered" error) *@
    @RenderSection("Styles", required: false)
</head>
<body>
    <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="logo-container">
                <a asp-controller="Home" asp-action="Index" class="nav-link">
                    <div class="logo">
                        <img src="~/img/logo.png" alt="Biblio Logo" class="logo">
                    </div>
                    <h1 class="brand-name">Biblio</h1>
                </a>
            </div>
        </div>
        <nav class="sidebar-nav">
            @*Admin temporarily added for testing purposes*@
            @*@if (User.IsInRole("Reader") || User.IsInRole("Librarian") || User.IsInRole("Admin"))*@
            @if (User.IsInRole("Reader") || User.IsInRole("Librarian"))
            {
            <div class="nav-item">
                <a asp-controller="Books" asp-action="Index" class="nav-link" data-page="library">
                    <i class="nav-icon fas fa-book-open"></i>
                    <span class="nav-text">Library</span>
                </a>
            </div>
            <div class="nav-item">
                <a asp-controller="Books" asp-action="AddBook" class="nav-link" data-page="add-items">
                    <i class="nav-icon fas fa-plus-circle"></i>
                    <span class="nav-text">Add Book</span>
                </a>
            </div>
            <div class="nav-item">
                <a asp-controller="Collections" asp-action="Index" class="nav-link" data-page="collections">
                    <i class="nav-icon fas fa-layer-group"></i>
                    <span class="nav-text">Collections</span>
                </a>
            </div>
            <div class="nav-item">
                <a asp-controller="Collections" asp-action="Create" class="nav-link" data-page="add-collection">
                <i class="nav-icon fas fa-folder-plus"></i>
                <span class="nav-text">Add Collection</span>
                </a>
            </div>
            }
@*             Admin temporarily added for testing purposes*@
@*             @if (User.IsInRole("Librarian") || User.IsInRole("Admin"))*@
                @if (User.IsInRole("Librarian"))
                {
                <div class ="sidebar-pro">
                    <div class="nav-item">
                        <a asp-controller="Borrowings" asp-action="Index" class="nav-link" data-page="borrowings">
                            <i class="nav-icon fas fa-exchange-alt"></i> @* fas fa-arrow-right-from-bracket *@
                            <span class="nav-text">Lending</span>
                        </a>
                    </div>
                    <div class="nav-item">
                        <a asp-controller="Visitors" asp-action="Index" class="nav-link" data-page="visitors">
                            <i class="nav-icon fas fa-users"></i>
                            <span class="nav-text">Visitors</span>
                        </a>
                    </div>

                </div>
			}
            @if (User.IsInRole("Admin"))
            {
                <div class="nav-item">
                    <a asp-controller="Admin" asp-action="Index" class="nav-link" data-page="admin-dashboard">
                        <i class="nav-icon fas fa-tachometer-alt"></i>
                        <span class="nav-text">Dashboard</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a asp-controller="Admin" asp-action="ManageUsers" class="nav-link" data-page="admin-users">
                        <i class="nav-icon fas fa-users-cog"></i>
                        <span class="nav-text">Manage Users</span>
                    </a>
                </div>
                <div class="nav-item">
                    <a asp-controller="Admin" asp-action="SendNotification" class="nav-link" data-page="admin-notify">
                        <i class="nav-icon fas fa-paper-plane"></i>
                        <span class="nav-text">Send Notification</span>
                    </a>
                </div>
            }
        </nav>

        <div class="sidebar-bottom">
            <a href="#" class="logout-link" data-bs-toggle="modal" data-bs-target="#logoutModal">
                <i class="logout-icon fas fa-sign-out-alt"></i>
                <span class="nav-text">Logout</span>
            </a>
            <button class="upgrade-btn" onclick="window.location.href='#'">Upgrade</button>
        </div>
    </aside>

    <main class="main-content">
        <div class="top-header">
            <h1 class="page-title">@ViewData["Title"]</h1>
            <div class="user-account">
                <partial name="_LoginPartial" />
            </div>
            <i id="notification-icon" class="notification-icon fas fa-bell"></i>
            <span id="notification-badge" class="notification-badge">0</span>
        </div>

        <div class="content-area">
            @RenderBody()
        </div>

    </main>
    <partial name="_LogoutModalPartial" />
    <partial name="_DeleteConfirmationModalPartial" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Library.js"></script>
    <script src="~/js/dashboard.js" asp-append-version="true"></script>
    <script src="~/js/collection-details.js" asp-append-version="true"></script>
    <script src="~/js/visitor-details.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript">
        function fetchUnreadCount() {
            fetch('@Url.Action("GetUnreadCount", "Notifications")')
                .then(response => response.json())
                .then(data => {
                    const badge = document.getElementById('notification-badge');
                    const icon = document.getElementById('notification-icon');
                    if (badge) {
                        if (data.count > 0) {
                            badge.textContent = data.count > 9 ? '+9' : data.count;
                            badge.style.display = 'flex';
							icon.style.display = 'block';
                        } else {
                            badge.style.display = 'none';
							icon.style.display = 'none';
                        }
                    }
                })
                .catch(error => console.error('Error fetching notification count:', error));
        }

        // (1) هات العدد أول ما الصفحة تفتح
        document.addEventListener('DOMContentLoaded', fetchUnreadCount);

        // (2) هات العدد كل دقيقة (60000 ميللي ثانية)
         setInterval(fetchUnreadCount, 60000);
        // (ملاحظة: ممكن تلغي السطر ده لو عايز التحديث يحصل بس عند الريفريش)
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>