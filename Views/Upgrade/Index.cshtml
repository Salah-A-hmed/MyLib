@using Microsoft.AspNetCore.Identity
@using Biblio.Models
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@{
    ViewData["Title"] = "Upgrade your plan";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // تحديد ما إذا كان المستخدم مشتركاً حالياً في خطة Pro
    var isPro = User.IsInRole("Librarian") || User.IsInRole("Admin");
    var payingPlanType = UserManager.GetUserAsync(User).Result.PayingPlanType;
}

@section Styles {
    <style>
        .top-header{
            display :none;
        }
        /* تنسيقات مخصصة لضمان عدم انكماش الكروت */
        .plan-card {
            transition: all 0.3s ease;
            min-height: 500px; /* ضمان حد أدنى للارتفاع */
        }

            .plan-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
            }

        /* تطبيق الـ Gradient بشكل دائم على كارت Pro */
        .pro-bg-gradient {
            background: linear-gradient(135deg, #4bc1d2 10%, #0096b5 100%);
            color: white;
        }
    </style>
}

<div class="container py-5">
    <div class="!mb-12 !text-center">
        <h1 class="!text-4xl md:!text-5xl !font-bold !text-[#2C3E50] !mb-4">
            <i class="fas fa-crown !text-[#4bc1d2] !mr-3"></i>
            Upgrade Your Plan
        </h1>
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <p class="!text-lg !text-[#34495E] !max-w-2xl !mx-auto">
            Choose the perfect plan for your library management needs. Unlock powerful features and take your library to the next level.
        </p>
    </div>

    <div class="!mb-8 !flex !justify-center">
        <div id="currentPlanBadge" class="!inline-flex !items-center !gap-2 !px-6 !py-3 !rounded-full !font-semibold
             @(isPro ? "pro-bg-gradient text-white shadow" : "!bg-[#E8EFF3] !text-[#2C3E50]")">
            <i class="fas fa-check-circle !@(isPro ? "text-white" : "text-info")"></i>
            <span id="currentPlanText">Current Plan: @(isPro ? "Library Pro" : "Free")</span>
        </div>
    </div>

    @if (!isPro)
    {
        <div class="d-flex justify-content-center align-items-center mt-4 mb-5 gap-3">
            <span class="fw-bold text-dark" id="monthlyLabel">Monthly</span>

            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="billingToggle" style="width: 3.5em; height: 1.75em; cursor: pointer;">
            </div>

            <span class="fw-bold text-muted" id="yearlyLabel">
                Yearly <span class="badge bg-success rounded-pill ms-1" style="font-size: 0.7em;">Save 20%</span>
            </span>
        </div>
    }


    <div class="!grid lg:!grid-cols-2 !gap-8 !max-w-5xl !mx-auto !mb-12">

        <div id="freePlanCard" class="card plan-card h-100 border-1 border-[#dee2e6] shadow rounded-5">
                <div class="card-body p-5">
                <h3 class="fw-bold text-dark">Reader</h3>
                    <div class="my-3">
                        <span class="display-3 fw-bold">$0</span>
                        <span class="text-muted">/mo</span>
                    </div>
                <p class="text-muted mb-4">
                    Perfect for getting started with basic library management

                </p>


                <p class="text-dark fw-bold mb-3 text-start">Essential features for personal use</p>
                    <ul class="list-unstyled !space-y-3 text-lg-start">
                    <li class="mb-2"><i class="fas fa-star !text-[#4bc1d2] me-2"></i> Unlimited Books Management</li>
                    <li class="mb-2"><i class="fas fa-star !text-[#4bc1d2] me-2"></i> Custom Collections</li>
                    <li class="mb-2"><i class="fas fa-star !text-[#4bc1d2] me-2"></i> Smart Book Search</li>
                    <li class="mb-2"><i class="fas fa-star me-2 !text-[#4bc1d2]"></i> Stock Tracking</li>
                    <li class="mb-2"><i class="fas fa-star me-2 !text-[#4bc1d2]"></i> System Notifications</li>
                    <li class="mb-2"><i class="fas fa-star me-2 !text-[#4bc1d2]"></i> Clean & Simple Dashboard</li>
                    </ul>
                @if (isPro)
                {
                    <form asp-controller="Upgrade" asp-action="Downgrade" method="post" id="downgradeForm">
                        @Html.AntiForgeryToken()
                        <button type="submit" id="downgradeBtn" class="btn btn-outline-secondary w-100 py-3 rounded-3 fw-bold mb-4 mt-2">
                            <i class="fas fa-arrow-down me-2"></i> Downgrade to Free
                        </button>
                    </form>
                }
                else
                {
                    <button class="btn !bg-[#E8EFF3] w-100 py-3 rounded-3 fw-bold mb-4 mt-2 " style="pointer-events:none">
                        <i class="fas fa-check-circle text-dark me-2"></i>
                        Current Plan
                    </button>
                }
                </div>
            </div>

        <div id="proPlanCard" class="card plan-card h-100 border-1  border-[#dee2e6] shadow-lg rounded-5 position-relative overflow-hidden pro-bg-gradient text-white">

            <div class="position-absolute top-0 mt-1 left-1/2 !transform !-translate-x-1/2 !px-6 !py-1 !bg-white !text-[#4bc1d2] !rounded-full !text-sm !font-bold !shadow-lg">
                    <i class="fas fa-star !mr-1"></i>
                    Most Popular
                </div>

                <div class="card-body p-5">
                <h3 class="fw-bold text-white">Biblio Pro</h3>

                @if (isPro)
                {
                    @if (payingPlanType == PayingPlanType.Monthly)
                    {
                        <div class="my-3">
                            <span class="display-3 fw-bold text-white" id="priceDisplay">29</span>
                            <span class="text-white opacity-75" id="periodDisplay">/mo</span>
                        </div>
                        <p class="text-white opacity-75 mb-4" id="billingText">Billed $29 Monthly</p>
                    }
                    else if (payingPlanType == PayingPlanType.Yearly)
                    {
                        <div class="my-3">
                            <span class="display-3 fw-bold text-white" id="priceDisplay">278</span>
                            <span class="text-white opacity-75" id="periodDisplay">/yr</span>
                        </div>
                        <p class="text-white opacity-75 mb-4" id="billingText">Billed $278 Yearly (Save $70)</p>
                    }
                }
                else
                {
                    <div class="my-3">
                        <span class="display-3 fw-bold text-white" id="priceDisplay"></span>
                        <span class="text-white opacity-75" id="periodDisplay"></span>
                    </div>
                    <p class="text-white opacity-75 mb-4" id="billingText"></p>
                }
                <br />
                <p class="text-white fw-bold mb-3 text-start">All features for professional library management</p>
                    <ul class="list-unstyled !space-y-3 text-lg-start text-white">
                        <li class="mb-2"><i class="fas fa-star text-white me-2"></i> <strong>All Standard Features Included</strong></li>
                        <li class="mb-2"><i class="fas fa-star text-white me-2"></i> Full <strong>Lending System</strong> (Borrow/Return)</li>
                        <li class="mb-2"><i class="fas fa-star text-white me-2"></i> Manage <strong>Visitors Records</strong> (Create/Trak-borrowings) </li>
                        <li class="mb-2"><i class="fas fa-star text-white me-2"></i> Track <strong>Fines & Fees</strong> Automatically</li>
                        <li class="mb-2"><i class="fas fa-star text-white me-2"></i> <strong>Overdue & Due</strong> Soon Notifications</li>
                        <li class="mb-2"><i class="fas fa-star text-white me-2"></i> <strong>Advanced Dashboard Analytics</strong></li>
                    </ul>
                @if (isPro)
                {
                    <button class="btn !bg-white/50 !text-white w-100 py-3 rounded-3 fw-bold mb-4 mt-2 " style="pointer-events:none">
                        <i class="fas fa-check-circle text-white me-2"></i>
                        Current Plan
                    </button>
                }
                else
                {
                    <form id="upgradeForm" method="post" asp-controller="Upgrade" asp-action="CreateCheckoutSession" onsubmit="handleUpgradeSubmit(event)">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="payingPlanType" id="selectedPlanType">

                        <button type="submit" id="upgradeBtn" class="btn-light !bg-white !text-[#4bc1d2] w-100 py-3 rounded-3 fw-bold mb-4 mt-2 !transition-all !duration-300 hover:!bg-[#E8EFF3] hover:!shadow-lg">
                            <i class="fas fa-arrow-up me-2"></i> Upgrade Now
                        </button>
                    </form>
                }
                </div>
            </div>

    </div>

    <div class="!max-w-5xl !mx-auto !mb-12">
        <h2 class="!text-3xl !font-bold !text-[#2C3E50] !mb-6 !text-center">
            <i class="fas fa-table !text-[#4bc1d2] !mr-2"></i>
            Feature Comparison
        </h2>
        <div class="!bg-white !rounded-2xl !shadow-lg !overflow-hidden border border-light">
            <div class="!overflow-x-auto">
                <table class="table table-hover table-striped mb-0">
                    <thead class="!bg-[#E8EFF3]">
                        <tr>
                            <th class="!px-6 !py-4 !text-start !text-[#2C3E50] !font-semibold">Feature</th>
                            <th class="!px-6 !py-4 !text-center !text-[#2C3E50] !font-semibold">Free (Reader)</th>
                            <th class="!px-6 !py-4 !text-center !text-[#4bc1d2] !font-semibold">Biblio Pro</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="!px-6 !py-4 !text-[#34495E]">Books Management</td>
                            <td class="!px-6 !py-4 !text-center"><i class="fas fa-check text-success me-1"></i> Included</td>
                            <td class="!px-6 !py-4 !text-center"><i class="fas fa-check text-success me-1"></i> Included</td>
                        </tr>
                        <tr>
                            <td class="!px-6 !py-4 !text-[#34495E]">Collections Management</td>
                            <td class="!px-6 !py-4 !text-center"><i class="fas fa-check text-success me-1"></i> Included</td>
                            <td class="!px-6 !py-4 !text-center"><i class="fas fa-check text-success me-1"></i> Included</td>
                        </tr>
                        <tr>
                            <td class="!px-6 !py-4 !text-[#34495E]">Search by Title / ISBN</td>
                            <td class="!px-6 !py-4 !text-center"><i class="fas fa-check text-success me-1"></i> Included</td>
                            <td class="!px-6 !py-4 !text-center"><i class="fas fa-check text-success me-1"></i> Included</td>
                        </tr>
                        <tr>
                            <td class="!px-6 !py-4 !text-[#34495E]">Stock Tracking</td>
                            <td class="!px-6 !py-4 !text-center"><i class="fas fa-check text-success me-1"></i> Included</td>
                            <td class="!px-6 !py-4 !text-center"><i class="fas fa-check text-success me-1"></i> Included</td>
                        </tr>
                        <tr>
                            <td class="!px-6 !py-4 !text-[#34495E]">System Notifications</td>
                            <td class="!px-6 !py-4 !text-center"><i class="fas fa-check text-success me-1"></i> Included</td>
                            <td class="!px-6 !py-4 !text-center"><i class="fas fa-check text-success me-1"></i> Included</td>
                        </tr>
                        <tr>
                            <td class="!px-6 !py-4 !text-[#34495E]">Borrowing System</td>
                            <td class="!px-6 !py-4 !text-center"><i class="fas fa-times text-danger me-1"></i> Not Available</td>
                            <td class="!px-6 !py-4 !text-center"><i class="fas fa-check text-success me-1"></i> Included</td>
                        </tr>
                        <tr>
                            <td class="!px-6 !py-4 !text-[#34495E]">Visitors Management</td>
                            <td class="!px-6 !py-4 !text-center"><i class="fas fa-times text-danger me-1"></i> Not Available</td>
                            <td class="!px-6 !py-4 !text-center"><i class="fas fa-check text-success me-1"></i> Included</td>
                        </tr>
                        <tr>
                            <td class="!px-6 !py-4 !text-[#34495E]">Borrowing Notifications</td>
                            <td class="!px-6 !py-4 !text-center"><i class="fas fa-times text-danger me-1"></i> Not Available</td>
                            <td class="!px-6 !py-4 !text-center"><i class="fas fa-check text-success me-1"></i> Included</td>
                        </tr>
                        <tr>
                            <td class="!px-6 !py-4 !text-[#34495E]">Vsistors Notifications</td>
                            <td class="!px-6 !py-4 !text-center"><i class="fas fa-times text-danger me-1"></i> Not Available</td>
                            <td class="!px-6 !py-4 !text-center"><i class="fas fa-check text-success me-1"></i> Included</td>
                        </tr>
                        <tr>
                            <td class="!px-6 !py-4 !text-[#34495E]">Borrowing History</td>
                            <td class="!px-6 !py-4 !text-center"><i class="fas fa-times text-danger me-1"></i> Not Available</td>
                            <td class="!px-6 !py-4 !text-center"><i class="fas fa-check text-success me-1"></i> Included</td>
                        </tr>
                        <tr>
                            <td class="!px-6 !py-4 !text-[#34495E]">Full Analytics Dashboard</td>
                            <td class="!px-6 !py-4 !text-center"><i class="fas fa-times text-danger me-1"></i>Only Collection</td>
                            <td class="!px-6 !py-4 !text-center"><i class="fas fa-check text-success me-1"></i> Advanced</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="!max-w-4xl !mx-auto !mb-12">
        <h2 class="!text-3xl !font-bold !text-[#2C3E50] !mb-6 !text-center">
            <i class="fas fa-question-circle !text-[#4bc1d2] !mr-2"></i>
            Frequently Asked Questions
        </h2>
        <div class="!space-y-4">
            <div class="!bg-white !rounded-xl !p-4 !shadow-sm !border !border-[#dee2e6]">
                <h3 class="!text-lg !font-semibold !text-[#2C3E50] text-start !mb-2">
                    <i class="fas fa-chevron-down !text-[#4bc1d2] !mr-2"></i>
                    Can I switch plans anytime?
                </h3>
                <p class="!text-[#34495E] text-start !mt-2">
                    Yes! You can upgrade or downgrade your plan at any time. Changes will be reflected immediately after the successful claims update.
                </p>
            </div>
            <div class="!bg-white !rounded-xl !p-4 !shadow-sm !border !border-[#dee2e6]">
                <h3 class="!text-lg !font-semibold !text-[#2C3E50] text-start !mb-2">
                    <i class="fas fa-chevron-down !text-[#4bc1d2] !mr-2"></i>
                    What happens if I downgrade?
                </h3>
                <p class="!text-[#34495E] text-start !mt-2">
                    You will lose access to the Lending, Visitors and Advanced Dashboard features. Your user role will revert to "Reader".
                </p>
            </div>
        </div>
    </div>

    <div class="!max-w-4xl !mx-auto !text-center !py-12 !px-6 pro-bg-gradient !rounded-2xl !shadow-xl">
        <h2 class="!text-3xl md:!text-4xl !font-bold !text-white !mb-4">
            Ready to Upgrade?
        </h2>
        <p class="!text-white !text-lg !mb-8 !opacity-90">
            Join thousands of libraries already using Biblio Pro to manage their collections efficiently.
        </p>

        @if (!isPro)
        {
            <button onclick="document.getElementById('upgradeBtn').click()" class="!px-8 !py-4 !bg-white !text-[#4bc1d2] !rounded-lg !font-bold !text-lg !transition-all !duration-300 hover:!bg-[#E8EFF3] hover:!shadow-2xl hover:!scale-105">
                <i class="fas fa-rocket !mr-2"></i>
                Start Your Pro Journey Today
            </button>
        }
        else
        {
            <span class="!px-8 !py-4 !bg-white/50 !text-white !rounded-lg !font-bold !text-lg">
                <i class="fas fa-check !mr-2"></i>
                You are currently a Pro Member!
            </span>
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/Upgrade.js" asp-append-version="true"></script>
}